<h2><%= "#{@title}" %> persona</h2>

<% if @person.errors.any? %>
  <ul>
    <% @person.errors.full_messages.each do |msg| %>
      <li><%= msg %></li> 
    <% end %>
  </ul>

<% end %>


<%= form_for @person do |person| %>
  <div class="form-group row">
    <%= person.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= person.text_field :name, class:"form-control", disabled: !@write  %>
    </div>
  </div>

  <div class="form-group row">
    <%= person.label :last_name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= person.text_field :last_name, class:"form-control", disabled: !@write %>
    </div>
  </div>

  <div class="form-group row">
    <%= person.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= person.text_field :email, class:"form-control", disabled: !@write %>
    </div>
  </div>

  <div class="form-group row">
    <%= person.label :gender, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= person.text_field :gender, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= person.label :age, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= person.text_field :age, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= person.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= person.text_area :description, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <%= person.submit @title %>
    </div>
  </div>
<% end %>  

